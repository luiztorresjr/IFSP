	public void lerArquivo(String destino){
		destino.replace('\'', '/');
		try{
			FileReader fileReader = new FileReader(destino);
			BufferedReader reader = new BufferedReader(fileReader);
			String linha;
			while((linha = reader.readLine())!=null){
				
			}
		}catch(IOException e){
			e.printStackTrace();
		}
	}
}